{
    "name": "mailerlite/mailerlite-api-v2-php-sdk",
    "description": "MailerLite API v2 PHP SDK",
    "homepage": "https://github.com/mailerlite/mailerlite-api-v2-php-sdk",
    "license": "MIT",
    "keywords": ["mailerlite", "sdk", "email", "marketing"],
    "type": "library",
    "require": {
        "php" : "^7.1 || ^8.0",
        "php-http/client-common": "^2.0",
        "php-http/discovery": "^1.7",
        "nyholm/psr7": "^1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^2.0",
        "phpunit/phpunit": "6.* | 7.* | 8.* | 9.*"
    },
    "autoload": {
        "psr-4": {
            "MailerLiteApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MailerLiteApi\\Tests\\": "tests/"
        }
    }
}
